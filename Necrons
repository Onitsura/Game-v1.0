package Game;

    public abstract class Necrons implements Character {

        public static final String id = "Necron";
        String name;
        int health;
        int attackPower;
        int heal;
        int energy;
        int expierence;
        int blockedDamage;


        abstract void setArmor(int armor);

        public void setHealth(int health) {

        }


        @Override
        public boolean isDead() {
            if (this.getHealth() <= 0) {
                return true;
            } else {
                return false;
            }
        }


        public void status(Character character) {
            if (character.isDead() == true) {
                System.out.println(character.getName() + " is dead");
                System.out.println(this.getName() + " win!");
                System.exit(0);
            } else if (this.isDead() == true) {
                System.out.println(this.getName() + "is dead");
                System.out.println(character.getName() + " win!");
                System.exit(0);
            }
        }


        public void say() {
            System.out.println("....hkhkkh.......");
        }

    }
