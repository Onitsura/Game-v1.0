package Game;

    public class GaussGun extends FireArms {
        public static final String id = "NecronsWeapon";
        private int ammo = 3;
        private int needExperience = 40;
        private int damage = 70;


        @Override
        public boolean accuracy() {
            if (((r.nextInt(3) + 1) % 2 != 0) == true) {
                return true;
            } else {
                return false;
            }

        }

        @Override
        public void reload() {
            if (ammo <= 0) {
                System.out.println();
                System.out.println("*RELOAD*");
                ammo++;
                System.out.println("Ammo+1\n");
            }

        }

        @Override
        public boolean haveEnoughExperience(Character character) {
            if (character.getExperience() >= this.getExperience()) {
                return true;
            } else {


                return false;
            }
        }


        @Override
        public void shoot(Necrons character, FireArms gun) {

            if (gun.haveEnoughExperience(character) == true) {
                if (gun.accuracy() == true) {
                    if (this.enoughAmmo() == true) {
                        System.out.println(character.getName() + " attack with a Gauss Gun.\n");
                        character.setAttackPower(getDamage());
                        ammo--;
                        System.out.println("Ammo: " + ammo + "\n");
                    } else {
                        this.reload();
                    }
                } else {
                    System.out.println("Sorry, but you're miss.\n");
                }
            } else {
                System.out.println("You need more practice for using Gauss Gun. \n");
            }

        }


        @Override
        public int getExperience() {

            return needExperience;
        }

        public int getDamage() {
            return damage;
        }

        public boolean enoughAmmo() {
            if (ammo > 0) {
                return true;
            } else {
                System.out.println(" You don't have enough ammo, reload your gun.");
                return false;
            }
        }

        @Override
        public void increaseAmmo() {
            ammo++;
            System.out.println("...hkhkhh...Thanks.....");

        }


    }
