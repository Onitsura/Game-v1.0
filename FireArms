package Game;

import java.util.Random;

    public abstract class FireArms implements Guns {
        int ammo;
        int damage;
        int needExpierence;
        Random r = new Random();


        public abstract boolean accuracy();

        public abstract void shoot(Necrons character, FireArms gun);

        public int getAmmo() {
            return ammo;
        }


        public void shoot(Character character) {
            character.setAttackPower(this.getDamage());

        }


    }
